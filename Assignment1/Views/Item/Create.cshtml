@model MVCApplication1.Models.ViewModel.ItemViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Item</title>
    <link rel="stylesheet" href="styles.css">
    <style>
        body {
            background-color: #f4f4f4;
            font-family: Arial, sans-serif;
        }

        .container {
            margin: 20px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 5px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }

        .item-form {
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .control-label {
            font-weight: bold;
        }

        .form-control {
            width: 100%;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 3px;
            transition: border-color 0.3s ease-in-out;
        }

            .form-control:focus {
                outline: none;
                border-color: #3498db;
            }

        .text-danger {
            color: red;
        }

        .btn {
            padding: 8px 15px;
            background-color: #3498db;
            color: white;
            border: none;
            border-radius: 3px;
            cursor: pointer;
            transition: background-color 0.3s ease-in-out;
        }

            .btn:hover {
                background-color: #2980b9;
            }

        .back-link a {
            color: #3498db;
            text-decoration: none;
            transition: color 0.3s ease-in-out;
        }

            .back-link a:hover {
                color: #2980b9;
            }

        .back-link a {
            display: inline-block;
            padding: 10px 20px;
            background-color: #007bff;
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

            .back-link a:hover {
                background-color: #0056b3;
            }

    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <form asp-action="Create_Item" class="item-form">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="ItemName" class="control-label">Item Name:</label>
                        <input asp-for="ItemName" class="form-control" id="myInput" />
                        <span asp-validation-for="ItemName" class="text-danger"></span>
                        <div style="color:red" id="resultDiv"></div>
                        <div style="color:green" id="resultDiv1"></div>
                        <div class="result" id="resultDiv"></div>
                        <div class="result" id="resultDiv1"></div>
                    </div>
                    <div class="form-group">
                        <label asp-for="IRate" class="control-label">Item Rate:</label>
                        <input asp-for="IRate" class="form-control" />
                        <span asp-validation-for="IRate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="IQuantity" class="control-label">Item Quantity:</label>
                        <input asp-for="IQuantity" class="form-control" />
                        <span asp-validation-for="IQuantity" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
        <div class="back-link">
            <a asp-controller="Item" asp-action="GetallItems">Back to List</a>
        </div>
    </div>
</body>
</html>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function() {
      // Attach the blur event handler to the input element
      $("#myInput").blur(function() {
        // Get the value from the input element
        var inputValue = $(this).val();

        // Perform the AJAX call
        $.ajax({
                type: "POST",
                url: "Ajax_Call", // Replace with your controller and action method's URL
          data: { ItemName: inputValue }, // Send the input value to the controller
          success: function(response) {
              if (response.includes('Already')) {
                        $("#resultDiv").append(response);
              }              else {
                        $("#resultDiv1").html(response);
              }
          },
          error: function(error) {
            // Handle errors, if any
            console.error(error);
          }
        });
      });
    });

</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
